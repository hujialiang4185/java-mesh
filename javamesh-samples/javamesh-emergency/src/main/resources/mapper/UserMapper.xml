<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huawei.emergency.mapper.UserMapper">
    <select id="getAuthByRole" parameterType="String" resultType="String">
        SELECT auth_name
        FROM emergency_auth
        WHERE role_name = #{role}
    </select>

    <select id="selectUserByName" parameterType="String" resultType="com.huawei.emergency.entity.User">
        SELECT user_name, nick_name, password, role_name AS role,enabled
        FROM emergency_user
        WHERE user_name = #{userName}
    </select>
</mapper>